
<h2>Sign in</h2>

<%= form_for(resource, :class => "form-horizontal", :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="control-group">
  <%= f.label :email, :class =>"control-label" %>
  	<div class="controls">
 		 <%= f.email_field :email, :placeholder=>"Email address",:autofocus => true %>
 	 </div>
  </div>
  <div class="control-group"><%= f.label :password %>
  	<div class="controls">
  <%= f.password_field(:password, :placeholder=>"Password") %>
  </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="control-group">
<div class="controls"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <%= f.submit "Sign in", :class =>"btn btn-large btn-primary"%>
   </div>
</div>
<% end %>

<%= render "devise/shared/links" %>


